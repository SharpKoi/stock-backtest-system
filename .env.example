# Environment Configuration
# Copy this file to .env and fill in your actual values

# ── Environment ──
ENVIRONMENT=local  # local, development, staging, production

# ── Database Settings ──
DATABASE_TYPE=sqlite  # sqlite or postgresql

# SQLite (for local development)
SQLITE_DATABASE_PATH=./backend/data/backtest.db

# PostgreSQL (for cloud deployment)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=backtest

# ── Redis Settings (for task queue) ──
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# ── API Settings ──
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8080"]

# ── Backtest Settings ──
DEFAULT_INITIAL_CAPITAL=100000.0
DEFAULT_COMMISSION_RATE=0.001
DEFAULT_DATA_PERIOD=5y

# ── Cloud Storage Settings (for cloud deployment) ──
S3_BUCKET=
S3_REGION=us-east-1

# ── AWS Credentials (if using S3) ──
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
